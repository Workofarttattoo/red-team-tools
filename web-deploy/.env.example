# Production Authentication Configuration
# Copy this file to .env and fill in your values
# DO NOT COMMIT THE .env FILE TO VERSION CONTROL

# Supabase Configuration (Required)
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your-anon-public-key-here

# Optional: Service Role Key (for admin operations only - keep secure!)
# SUPABASE_SERVICE_KEY=your-service-role-key-here

# Application Settings
APP_DOMAIN=https://yourdomain.com
APP_NAME=TheGAVL Red Team Tools

# Feature Flags
ENABLE_SIGNUP=true
ENABLE_OAUTH=false
ENABLE_MFA=false
REQUIRE_EMAIL_VERIFICATION=true

# Security Settings
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=15
SESSION_DURATION_HOURS=24
PASSWORD_MIN_LENGTH=8

# Rate Limits (attempts per minute)
RATE_LIMIT_LOGIN=10
RATE_LIMIT_SIGNUP=5
RATE_LIMIT_PASSWORD_RESET=3

# OAuth Providers (set to true after configuring in Supabase)
OAUTH_GOOGLE=false
OAUTH_GITHUB=false
OAUTH_GITLAB=false
OAUTH_BITBUCKET=false

# Compliance
GDPR_ENABLED=true
CCPA_ENABLED=true
DATA_RETENTION_DAYS=90

# Monitoring (optional)
SENTRY_DSN=
ANALYTICS_ID=